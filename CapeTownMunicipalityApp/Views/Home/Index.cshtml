@{
    ViewData["Title"] = "Home";
}

<style>
    body {
        background-color: #f8fbff;
    }

    .carousel img {
        max-height: 400px;
        object-fit: cover;
    }

    .widget-card {
        background-color: #ffffff;
        border-radius: 20px;
        box-shadow: 0px 4px 12px rgba(0,0,0,0.1);
        text-align: center;
        transition: transform 0.2s;
        padding: 20px;
        height: 180px;
    }

        .widget-card:hover {
            transform: translateY(-5px);
        }

    .widget-title {
        font-size: 1.3rem;
        font-weight: bold;
        color: #B0C434;
        margin-bottom: 10px;
    }

    .widget-desc {
        font-size: 1rem;
        color: #444;
    }
</style>

<div class="container mt-4">
    @* Shifting Banner at the top *@
    <div id="mainCarousel" class="carousel slide mb-5" data-bs-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="/images/banner1.jpeg" class="d-block w-100" alt="Banner 1">
            </div>
            <div class="carousel-item">
                <img src="/images/banner2.jpg" class="d-block w-100" alt="Banner 2">
            </div>
            <div class="carousel-item">
                <img src="/images/banner3.jpg" class="d-block w-100" alt="Banner 3">
            </div>
            <div class="carousel-item">
                <img src="/images/banner4.jpg" class="d-block w-100" alt="Banner 4">
            </div>
            <div class="carousel-item">
                <img src="/images/banner5.jpg" class="d-block w-100" alt="Banner 5">
            </div>
                <button class="carousel-control-prev" type="button" data-bs-target="#mainCarousel" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon"></span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#mainCarousel" data-bs-slide="next">
                    <span class="carousel-control-next-icon"></span>
                </button>
        </div>
    </div>

    @* 3 Widgets *@
    <div class="row g-4">
        <div class="col-md-4">
            <a href="/Report/Form" style="text-decoration:none;">
                <div class="widget-card">
                    <div class="widget-title">Report Issues</div>
                    <div class="widget-desc">Quickly log problems in your area for review.</div>
                </div>
            </a>
        </div>
        <div class="col-md-4">
            <a href="/EventsAndAnnouncements/Temp" style="text-decoration:none;">
                <div class="widget-card">
                    <div class="widget-title">Local Events</div>
                    <div class="widget-desc">Stay informed about upcoming activities and news.</div>
                </div>
            </a>
        </div>
        <div class="col-md-4">
            <a href="/Services/Temp" style="text-decoration:none;">
                <div class="widget-card">
                    <div class="widget-title">Service Requests</div>
                    <div class="widget-desc">Check the progress of services you’ve made requests on.</div>
                </div>
            </a>
        </div>
    </div>
</div>